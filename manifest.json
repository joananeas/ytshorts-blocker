{
    "manifest_version": 2,
    "name": "ytshorts-blocker",
    "version": "1.0",
  
    "description": "It blocks the yt shorts url and redirects to the main website everytime.",
  
    "icons": {
      "48": "icons/ytshorts.png"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["main.js"]
      }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "https://*/*",
        "https://*/*"
      ]
  }
  